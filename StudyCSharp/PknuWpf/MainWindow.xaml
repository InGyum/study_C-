<Window x:Class="PknuWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PknuWpf"
        mc:Ignorable="d"
        Title="SampleWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="120">
            <TextBlock TextWrapping="Wrap" Text="Text Block" Height="40"
                       Margin="10,25,10,5"/>
            <TextBox x:Name="TxtNames"  Height="35" TextWrapping="Wrap" Text="Input something"
                     Margin="10,25,10,5"/>
            <ProgressBar x:Name="PgbTest" Height="30" Margin="5,10" Minimum="0" Maximum="100" Value="60"/>
            <Slider Height="50" Margin="20,20"/>
            <PasswordBox PasswordChar="#" Password="Test" Height="20" Margin="12,12"/>

        </StackPanel>



    </Grid>
</Window>
