            <MediaElement Source="cat.wmv" Height="70"/>
        </Button>
        <Button  HorizontalAlignment="Right" Margin="0,10,152,0" VerticalAlignment="Top" Width="137" Height="61">
            <CheckBox Content="Test Statement"/>
        </Button>
        <Button  HorizontalAlignment="Right" Margin="0,76,152,0" VerticalAlignment="Top" Width="137" Height="61">
            <Image Source="cat.jpg"/>
